#!/bin/bash

sudo mkdir -p /etc/salt /var/cache/salt /var/log/salt /var/run/salt
sudo chown -R $USER:$USER /etc/salt /var/cache/salt /var/log/salt /var/run/salt
cp {{ pillar.dvm.vagrantfile.synced_folder }}{{ pillar.pwd|replace(pillar.global.user.home_dir, "") }}/.ideos/dvm/etc/minion /etc/salt
cp -R {{ pillar.dvm.vagrantfile.synced_folder }}{{ pillar.pwd|replace(pillar.global.user.home_dir, "") }}/etc/gpgkeys /etc/salt
salt-call --state-output=mixed state.apply pillar="{ 'mode':'destination' }"
