Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/artful64"
  config.vm.network "private_network", ip: "{{ dvm['vagrantfile']['ip'] }}"

  config.vm.provider :virtualbox do |vb|
    vb.gui = {{ dvm['vagrantfile']['gui'] }}
    vb.memory = {{ dvm['vagrantfile']['memory'] }}
    vb.cpus = {{ dvm['vagrantfile']['cpus'] }}
  end

  config.vm.synced_folder ".", "/vagrant", :disabled => true

  config.vm.synced_folder "#{ENV['HOME']}/Organisations", "/home/vagrant/Organisations", :id => "home", :nfs => true, :mount_options => ['nolock,vers=3,udp']

  config.vm.provision "shell", :inline => "apt-get -y install python python-pip && chmod -x /etc/update-motd.d/* && pip install pexpect"
end
