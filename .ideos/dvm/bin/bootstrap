#!/bin/bash

sudo mkdir -p /etc/salt /var/cache/salt /var/log/salt /var/run/salt
sudo chown -R $USER:$USER /etc/salt /var/cache/salt /var/log/salt /var/run/salt
cp /vagrant/Organisations/nomas-prime/IDEOS/.ideos/dvm/etc/minion /etc/salt
cp -R /vagrant/Organisations/nomas-prime/IDEOS/etc/gpgkeys /etc/salt
salt-call --state-output=mixed state.apply pillar="{ 'mode':'destination' }"
